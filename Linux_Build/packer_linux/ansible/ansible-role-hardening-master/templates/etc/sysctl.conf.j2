#Disable ping replay
net.ipv4.icmp_echo_ignore_all = 1
#Disable broadcast pings
net.ipv4.icmp_echo_ignore_broadcasts = 1
#Disable ip forwarding
net.ipv4.ip_forward = 0
#Disable IPv6
net.ipv6.conf.all.disable_ipv6 = 1
net.ipv6.conf.default.disable_ipv6 = 1
net.ipv6.conf.lo.disable_ipv6 = 1
# Disables the magic-sysrq key
kernel.sysrq = 0
#Disable Source Routing
net.ipv4.conf.all.accept_source_route = 0
#activates protection against "bogus error message responses"
net.ipv4.icmp_ignore_bogus_error_responses = 1
#Disable Reverse Path Forwarding
net.ipv4.conf.default.rp_filter = 1
net.ipv4.conf.all.rp_filter = 1
#Turn timestamps off with the following command
net.ipv4.tcp_timestamps = 0
#Kernel Hardening
kernel.kptr_restrict = 2
kernel.panic = 60
kernel.panic_on_oops = 60
kernel.perf_event_paranoid = 2
kernel.randomize_va_space = 2
kernel.yama.ptrace_scope = 1
# Controls whether core dumps will append the PID to the core filename
kernel.core_uses_pid = 1
# Send redirects, if router, but this is just server
net.ipv4.conf.all.send_redirects = 0
net.ipv4.conf.default.send_redirects = 0
# Hardening against SYN Floods
net.ipv4.tcp_syncookies = 1
net.ipv4.tcp_max_syn_backlog = 2048
net.ipv4.tcp_synack_retries = 3
net.ipv4.tcp_syn_retries = 5
net.ipv4.tcp_challenge_ack_limit = 1073741823
# Reject Redirects
net.ipv4.conf.all.accept_redirects = 0
net.ipv4.conf.all.secure_redirects = 0
# Log packets with impossible addresses to kernel log
net.ipv4.conf.all.log_martians = 1
net.ipv4.conf.default.accept_source_route = 0
net.ipv4.conf.default.accept_redirects = 0
net.ipv4.conf.default.secure_redirects = 0
#Enable net RFC 1337
net.ipv4.tcp_rfc1337 = 1
#Increase system IP port limits
net.ipv4.ip_local_port_range = 2000 65000
#Log Suspicious Martian Packets
net.ipv4.conf.default.log_martians = 1
#maximum number of open files
fs.file-max = 346492
#File system hardening
fs.protected_hardlinks = 1
fs.protected_symlinks = 1
fs.suid_dumpable = 0
# Linux Netfilter tweaks for High traffic servers
net.netfilter.nf_conntrack_max = 2000000
net.netfilter.nf_conntrack_tcp_loose = 0
#Disable swappiness
vm.swappiness = 0
#Increase the number of TCP socket ports available
net.ipv4.ip_local_port_range = 10000 65000
#TIMED_WAIT state when closed
net.ipv4.netfilter.ip_conntrack_tcp_timeout_time_wait = 1
